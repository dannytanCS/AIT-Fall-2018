<h4 class="heading">Login</h4>
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}

{{!-- form for logging in  --}}
<form method="POST" action ='/login' class="form-inline">
    <label class="col-1.5 col-form-label"> Username:</label>
    <input class="form-control mb-2 mr-sm-2 mb-sm-0" type="text" name="username" value="">

     <label class="col-1.5 col-form-label"> Password:</label>
    <input class="form-control mb-2 mr-sm-2 mb-sm-0" type="password" name="password" value="">

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<a href="/register">Register a new account</a>