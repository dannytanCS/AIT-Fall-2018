<h4 class="heading">Add Note</h4>
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}
<form method="POST" action="/add" enctype="multipart/form-data">
	<h4 class="addLabel">Class Info:</h4>
	<div class="form-group">
		<label for="courseName">Course Name:</label>
		<input type="text" name="courseName"  value="" placeholder="Machine Learning" required>
	</div>
	<div class="form-group">
		<label for="courseYear">Year: </label>
		<input type="text" name="courseYear" value="" placeholder="fall 2018" required>
	</div>

	<div class="form-group">
		<label for="courseNumber">Course Number: </label>
		<input type="text" name="courseNumber" value="" placeholder="CS-UA.0480" required>
	</div>

	<div class="form-group">
		<label for="professor">Professor: </label>
		<input type="text" name="professor" value="" placeholder="Joe Biden" required>
	</div>

	<h4 class="addLabel">Notes Info:</h4>
	<div class="form-group">
		<label for="noteName">Note Name:</label>
		<input type="text" name="noteName" value="" placeholder="Class #1" required>
	</div>
	<div class="form-group">
		<label for="dateTaken">Date Taken: </label>
		<input type="text" name="dateTaken" value="" placeholder="11/19/2018" required>
	</div>
	<div class="form-group">
		<label for="noteDescription">Description: </label>
		<textarea rows="4" cols="50" name="noteDesc" value="" placeholder="a short description of the notes" required ></textarea>
	</div>

	<div class="form-group">
		<label for="noteFile"> Upload your image(jpeg or png less than 16MB):</label>
		{{!-- upload your file --}}
		<input type="file" name="file" required>
	</div>
	<button class="btn btn-primary" id="addButton" type="submit">Add</button>
</form>